<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<!--namespace写接口包名+接口-->
<mapper namespace="com.hailicy.sbmbjppro.dao.EmpDao" >

    <!--查询所有-->
    <select id="findAll" resultType="Emp">
        select id,name,salary,age from t_emp
    </select>


    <!--保存员工的方法-->
    <insert id="save" parameterType="Emp">
        insert into t_emp  values (#{id},#{name},#{salary},#{age})
    </insert>


    <!--删除员工的方法-->
    <delete id="delete" parameterType="String">
        delete from t_emp where id = #{id}
    </delete>

    <!--根据员工id查询员工信息-->
    <select id="findById" parameterType="String" resultType="Emp">
        select id,name,salary,age from t_emp where id = #{id}
    </select>

    <!--更新的实现-->
    <update id="update" parameterType="Emp">
        update t_emp set name=#{name},salary=#{salary},age=#{age} where id = #{id}
    </update>

</mapper>